
<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {

        if (User.IsInRole("User"))
        {
            <li class="nav-item">
                <a class="nav-link " asp-action="DonorInformation" asp-controller="Users">
                    @User.Identity.Name!
                </a>
            </li>
        }
        <li class="nav-item">
            <form class="form-inline" method="post" asp-action="Logout" asp-controller="Users" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link ">
                    Вийти
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-action="Register" asp-controller="Users">
                Зареєструватися
            </a>
        </li>
        <li class="nav-item">

            <a class="nav-link" asp-action="Login" asp-controller="Users">
                Увійти
            </a>
        </li>
    }
</ul>